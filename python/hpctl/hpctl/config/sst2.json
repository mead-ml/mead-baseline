{
    "num_iters": 1,
    "mead": {
        "task": "classify",
        "batchsz": {
            "type": "choice",
            "values": [25, 50, 75]
        },
        "preproc": {
            "mxlen": 100,
            "rev": false,
            "clean": true
        },
        "backend": "tensorflow",
        "dataset": "SST2",
        "loader": {
            "reader_type": "default"
        },
        "unif": {
            "type": "uniform",
            "min": 0.20,
            "max": 0.25
        },
        "model": {
            "model_type": "default",
            "filtsz": {
                "type": "grid",
                "values": [[3, 4, 5], [1, 3, 5]]
            },
            "cmotsz": {
                "type": "grid",
                "values": [100, 128, 256]
            },
            "dropout": {
                "type": "normal",
                "mu": 0.5,
                "sigma": 0.1
            },
            "finetune": true
        },
        "word_embeddings": {
            "label": "w2v-gn"
        },
        "train": {
            "epochs": {
                "type": "grid",
                "values": [2, 3, 4]
            },
            "optim": "sgd",
            "eta": {
                "type": "min_log",
                "min": 1e-3,
                "max": 1e-1
            },
            "mom": {
                "type": "max_log",
                "min": 0.9,
                "max": 0.999
            },
            "model_base": "./models/sst2",
            "early_stopping_metric": "acc"
        }
    }
}
