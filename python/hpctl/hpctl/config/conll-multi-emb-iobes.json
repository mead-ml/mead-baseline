{
  "task": "tagger",
  "batchsz": 10,
  "conll_output": "conllresults.conll",
  "unif": 0.1,
  "features": [
    {
      "name": "word1",
      "vectorizer": {
        "type": "dict1d",
        "fields": "text",
        "transform": "baseline.lowercase"
      },
      "embeddings": {
        "label": {
          "hpctl": "choice",
          "values": ["glove-6B-100", "senna", "gn-wv", "glove-6B-50"
        }
      }
    },
    {
      "name": "word2",
      "vectorizer": {
        "type": "dict1d",
        "fields": "text",
        "transform": "baseline.lowercase"
      },
      "embeddings": {
        "label": {
          "hpctl": "choice",
          "values": ["senna", "glove-6B-200", "numberbatch"]
        }
      }
    },
    {
      "name": "char",
      "vectorizer": {
        "type": "dict2d"
      },
      "embeddings": {
        "dsz": {
          "hpctl": "choice",
          "values": [25, 30, 35]
        },
        "wsz": {
          "hpctl": "choice",
          "values": [30, 40, 50, 60]
        },
        "type": "char-conv",
        "unif": {
          "hpctl": "uniform",
          "min": 0.2,
          "max": 0.4
        }
      }
    }
  ],
  "preproc": {
  },
  "backend": "pytorch",
  "dataset": "conll-iobes",
  "loader": {
    "reader_type": "default",
    "named_fields": {
      "0": "text",
      "-1": "y"
    }
  },
  "model": {
    "model_type": "default",
    "cfiltsz": {
      "hpctl": "choice",
      "values": [
          [3],
          [3, 5]
      ]
    },
    "hsz": {
        "hpctl": "choice",
        "values": [350, 400, 500, 600]
    },
    "dropout": {
        "hpctl": "normal",
        "mu": 0.2,
        "sigma": 0.05
    },
    "rnntype": "blstm",
    "layers": {
        "hpctl": "grid",
        "values": [1, 2]
    },
    "crf_mask": true,
    "crf": 1
  },
  "train": {
    "epochs": 100,
    "optim": "sgd",
    "eta": {
        "hpctl": "normal",
        "mu": 0.015,
        "sigma": 0.001
    },
    "mom": {
        "hpctl": "max_log",
        "min": 0.7,
        "max": 0.99
    },
    "patience": 40,
    "early_stopping_metric": "f1",
    "clip": 5.0,
    "span_type": "iobes"
  }
}

