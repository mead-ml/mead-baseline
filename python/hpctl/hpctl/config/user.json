{
    "hpctl_modules": ["sampler_poisson"],
    "task": "classify",
    "visdom": true,
    "batchsz": {
        "hpctl": "choice",
        "values": [25, 50, 75]
    },
    "preproc": {
        "mxlen": {
            "hpctl": "poisson",
            "lam": 1
        },
        "rev": false,
        "clean": true
    },
    "backend": "tensorflow",
    "dataset": "SST2",
    "loader": {
        "reader_type": "default"
    },
    "unif": {
        "hpctl": "uniform",
        "min": 0.20,
        "max": 0.25
    },
    "model": {
        "model_type": "default",
        "filtsz": {
            "hpctl": "grid",
            "values": [[3, 4, 5], [1, 3, 5]]
        },
        "cmotsz": {
            "hpctl": "grid",
            "values": [100, 128, 256]
        },
        "dropout": {
            "hpctl": "normal",
            "mu": 0.5,
            "sigma": 0.1
        },
        "finetune": true
    },
    "word_embeddings": {
        "label": "w2v-gn"
    },
    "train": {
        "epochs": {
            "hpctl": "grid",
            "values": [2, 3, 4]
        },
        "optim": "sgd",
        "eta": {
            "hpctl": "min_log",
            "min": 1e-3,
            "max": 1e-1
        },
        "mom": {
            "hpctl": "max_log",
            "min": 0.9,
            "max": 0.999
        },
        "model_base": "./models/sst2",
        "early_stopping_metric": "acc"
    }
}
