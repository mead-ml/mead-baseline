{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "json": {
           "()": "baseline.utils.JSONFormatter"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "stream": "ext://sys.stdout",
            "formatter": "json"
        },
        "reporting_file_handler": {
            "class": "logging.FileHandler",
            "level": "INFO",
	        "mode": "w",
            "filename": "reporting.log",
            "formatter": "json",
            "encoding": "utf8"
        },
        "reporting_console_handler": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "stream": "ext://sys.stdout",
            "formatter": "json"
        },
        "info_file_handler": {
            "class": "logging.FileHandler",
            "level": "INFO",
            "filename": "info.log",
            "encoding": "utf8"
        },
	    "error_file_handler": {
            "class": "logging.FileHandler",
            "level": "ERROR",
            "filename": "errors.log",
            "encoding": "utf8"
        },
        "timing_file_handler": {
            "class": "logging.FileHandler",
            "level": "DEBUG",
            "mode": "w",
            "filename": "timing.log",
            "formatter": "json",
            "encoding": "utf-8"
        },
        "timing_console_handler": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "stream": "ext://sys.stdout",
            "formatter": "json"
        }
    },
    "loggers": {
        "baseline": {
            "level": "INFO",
            "handlers": ["console", "info_file_handler", "error_file_handler"],
            "propagate": false
        },
        "mead": {
            "level": "INFO",
            "handlers": ["console", "info_file_handler", "error_file_handler"],
            "propagate": false
        },
        "baseline.reporting": {
            "level": "INFO",
            "handlers": ["reporting_file_handler", "reporting_console_handler"],
            "propagate": false
        },
        "baseline.timing": {
            "level": "DEBUG",
            "handlers": ["timing_file_handler", "timing_console_handler"],
            "propagate": false
        }
    }
}
