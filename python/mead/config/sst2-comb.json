{
  "version": 2,
  "task": "classify",
  "basedir": "./sst2",
  "batchsz": 50,
  "features": [
       {
            "name": "word",
            "vectorizer": {
                "type": "token1d"
            },
            "embeddings": {
                "label": "glove-42B"
            }
        },
        {
            "name": "word2",
            "vectorizer": {
                "type": "token1d"
            },
            "embeddings": {
                "label": "senna"
            }
        },
        {
            "name": "char",
            "vectorizer": {
                "type": "char2d"
            },
            "embeddings": {
                "type": "char-conv", "dsz": 30, "wsz": 30
            }
        }

  ],
  "preproc": {
    "rev": false,
    "clean": true
  },
  "backend": "tensorflow",
  "dataset": "SST2",
  "loader": {
    "reader_type": "default"
  },
  "unif": 0.25,
  "model": {
    "model_type": "default",
    "filtsz": [
      3,
      4,
      5
    ],
    "cmotsz": 100,
    "dropout": 0.5,
    "finetune": true
  },
  "train": {
    "epochs": 2,
    "optim": "adadelta",
    "eta": 1.0,
    "model_zip": true,
    "early_stopping_metric": "acc",
    "verbose": {
      "console": true,
      "file": "sst2-cm.csv"
    }
  }
}
