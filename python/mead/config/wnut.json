{
    "task": "tagger",
    "batchsz": 20,
    "conll_output": "wnutresults.conll",
    "test_thresh": 10,
    "unif": 0.1,
    "preproc": {
	"mxlen": 60,
	"mxwlen": 40,
	"web-cleanup": false,
	"lower": true,
	"valsplit": 0.15
    },
    "features": [
	{
	    "name": "word",
	    "vectorizer": {
		"type": "dict1d",
		"fields": "text",
                "transform": "baseline.lowercase"
	    },
	    "embeddings": { "label": "glove-42B"}
	},
	{
	    "name": "char",
	    "vectorizer": { "type": "dict2d" },
	    "embeddings": { "dsz": 30, "wsz": 10, "type": "char-conv" }
	}
    ],
    "backend": "tensorflow",
    "dataset": "wnut",
    "loader": {
	"reader_type": "default",
        "named_fields": {
          "0":"text",
          "-1":"y"
        }
    },
    "model": {
	"model_type": "default",
	"cfiltsz": [
	    3
	],
	"hsz": 200,
	"dropout": 0.5,
	"rnntype": "blstm",
	"layers": 1,
    "constrain_decode":true,
	"crf": 1
    },
    "train": {
	"epochs": 60,
	"optim": "sgd",
	"decay": 0,
	"eta": 0.01,
	"mom": 0.9,
	"patience": 20,
	"early_stopping_metric": "f1",
       "clip": 5.0,
        "span_type": "bio"
    }
}

