{
    "task": "lm",
    "basedir": "ptb-med",
    "batchsz": 20,
    "unif": 0.05,
    "nbptt": 35,
    "charsz": 16,
    "preproc": {
        "mxwlen": 40,
        "lower": true
    },
    "backend": "tensorflow",
    "dataset": "ptb",
    "loader": {
        "reader_type": "default",
        "tgt_key": "word"
    },
    "features": [
        {
            "name": "word",
            "vectorizer": {
                "type": "token1d",
                "fields": "text"
            },
            "embeddings": {"label": "w2v-gn"}
        }

    ],
    "model": {
        "model_type": "default",
        "hsz": 650,
        "layers": 2
    },
    "train": {
        "epochs": 39,
        "decay_rate": 1.2,
        "patience": 40000,
        "optim": "sgd",
        "start_decay_epoch": 6,
        "lr_scheduler_type": "zaremba",
        "eta": 1.0,
        "mom": 0.0,
        "do_early_stopping": true,
        "clip": 5.0
    }
}
