{
  "task": "tagger",
  "modules": ["da"],
  "unif": 0.1,
  "features": [
    {
      "name": "word",
      "vectorizer": {
        "type": "turn-dict2d",
        "fields": "text"
      },
      "embeddings": {
        "label": "glove-840B",
        "type": "char-conv",
        "cfiltsz": [3,4,5],
        "wsz": 100
      }
    }
  ],
  "backend": "pytorch",
  "dataset": "mrda",
  "reader": {
    "type": "da",
    "named_fields": {
      "0": "text",
      "-1": "y"
    }
  },
  "model": {
    "type": "default",
    "hsz": 300,
    "dropout": 0.5,
    "rnntype": "blstm",
    "layers": 1,
    "crf": 1
  },
  "train": {
    "batchsz": 1,
    "epochs": 40,
    "optim": "adam",
    "eta": 0.0008,
    "grad_accum": 10,
    "patience": 20,
    "early_stopping_metric": "f1",
    "clip": 5.0
  }
}

