{
    "task": "tagger",
    "batchsz": 20,
    "basedir": "./twpos",
    "conll_output": "twposresults.conll",
    "test_thresh": 10,
    "charsz": 16,
    "unif": 0.1,
    "preproc": {
    },
    "backend": "tensorflow",
    "dataset": "twpos",
    "loader": {
        "reader_type": "default",
	"named_fields": {
	    "0": "text",
	    "-1": "y"
	}
    },
    "features": [
	{
	    "name": "word",
	    "vectorizer": {
		"type": "dict1d",
		"fields": "text",
		"transform": "baseline.lowercase",
		"mxlen": 38
	    },
	    "embeddings": { "label": "glove-twitter-27B" }
	},
	{
	    "name": "word2",
	    "vectorizer": {
		"type": "dict1d",
		"fields": "text",
		"transform": "baseline.web_cleanup",
		"mxlen": 38
	    },
	    "embeddings": { "label": "w2v-twitter-30M" }
	},
	{
	    "name": "char",
	    "vectorizer": {
		"type": "dict2d",
		"mxlen": 38,
		"mxwlen": 40
	    },
	    "embeddings": {
		"dsz": 30,
		"wsz": 30,
		"type": "char-conv",
		"cfiltsz": [1,2,3,4,5,7]
	    }
	}
    ],
    "model": {
        "model_type": "default",
        "hsz": 200,
        "dropout": 0.5,
        "rnntype": "blstm",
        "layers": 1,
        "crf": true	
    },
    "train": {
        "epochs": 40,
        "optim": "sgd",
        "decay": 0,
        "eta": 0.01,
        "mom": 0.9,
        "patience": 20,
        "early_stopping_metric": "acc",
        "clip": 5.0
    }
}
