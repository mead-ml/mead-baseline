{
  "task": "classify",
  "basedir": "./sst2-bert",
  "batchsz": 12,
  "modules": [
    "embed_bert_tf"
  ],
  "features": [
    {
      "name": "bert",
      "vectorizer": {
        "label": "bert-base-uncased",
        "dtype": "int32"
      },
      "embeddings": {
        "type": "bert-pooled",
        "embed_file": "bert_uncased_L-12_H-768_A-12/1",
        "dsz": 768,
        "trainable": true
      }
    }
  ],
  "preproc": {
    "mxlen": 100
  },
  "backend": "tensorflow",
  "dataset": "SST2",
  "loader": {
    "reader_type": "default"
  },
  "unif": 0.25,
  "model": {
    "model_type": "fine-tune"
  },
  "train": {
    "epochs": 2,
    "optim": "adam",
    "eta": 4.0e-5,
    "early_stopping_metric": "acc",
    "verbose": {
      "console": true,
      "file": "sst2-cm.csv"
    }
  }
}
